<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex06">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButtonEd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ed" />

            <ImageButton
                android:id="@+id/imageButtonAl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="140dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/al" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButtonRoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/roy" />

            <ImageButton
                android:id="@+id/imageButtonHughes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/hughes" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/imageButtonScar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/scar" />

            <ImageButton
                android:id="@+id/imageButtonWinry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/image_button_description"
                android:maxWidth="150dp"
                android:maxHeight="150dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/winry" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:insetLeft="40dp"
                android:insetRight="40dp"
                android:text="@string/back" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>